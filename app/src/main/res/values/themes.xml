<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="Theme.ImaniApp" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/islamic_green</item>
        <item name="colorPrimaryDark">@color/islamic_green_dark</item>
        <item name="colorAccent">@color/islamic_gold</item>
        
        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/islamic_green</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- Background colors -->
        <item name="android:windowBackground">@color/white</item>
        <item name="android:colorBackground">@color/white</item>
    </style>
</resources>